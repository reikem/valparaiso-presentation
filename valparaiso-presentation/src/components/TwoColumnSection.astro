---
const { 
  title, 
  content, 
  image, 
  buttonText, 
  isReversed 
} = Astro.props;
---
<section class="py-20 px-4 md:px-12">
  <div class={`flex flex-col md:flex-row gap-8 items-center ${isReversed ? 'md:flex-row-reverse' : ''}`}>
    <div class="md:w-1/2">
      <h2 class="text-4xl font-serif mb-4">{title}</h2>
      <p class="text-gray-600 mb-6">{content}</p>
      {buttonText && (
        <button class="border border-gray-400 py-3 px-6 text-sm font-semibold uppercase hover:bg-gray-100 transition-colors duration-300">
          {buttonText}
        </button>
      )}
    </div>
    <div class="md:w-1/2">
      {image && <img src={image} alt="Imagen complementaria" class="w-full object-cover rounded-md shadow-lg" />}
      <slot /> </div>
  </div>
</section>